{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "mpchan917/multi-client",
            "hostname": "client",
            "essential": false
        },

        {
            "name": "server",
            "image": "mpchan917/multi-server",
            "hostname": "api",
            "essential":false
        },

        {
            "name": "worker",
            "image": "mpchan917/multi-worker",
            "hostname": "worker",
            "essential": false
        },

        {
            "name": "nginx",
            "image":"mpchan917/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        }

    ]
}